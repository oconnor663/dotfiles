{
    "editor.fontFamily": "Ubuntu Mono",
    "editor.fontSize": 18,
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "Ubuntu Mono",
    "vim.handleKeys":{
        "<C-f>": false,
        "<C-w>": false
    },
    "vim.hlsearch": true,
    "vim.leader": " ",
    "go.lintTool": "gometalinter",
    "go.lintFlags": [
        "--disable-all"
    ],
    "editor.minimap.showSlider": "always",
    "window.zoomLevel": 0,
    "rust.rustup": {
        "toolchain": "stable-x86_64-unknown-linux-gnu",
        "nightlyToolchain": "nightly-x86_64-unknown-linux-gnu"
    },
    "rust.mode": "rls",
    "rust.rls": {
        "useRustfmt": true
    }
}
